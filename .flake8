[flake8]
max-line-length = 88

; Ignore specific errors
; E203: Whitespace before ':'
; W503: Line break before binary operator
; E501: Line too long
extend-ignore = E203, W503, E501

; Exclude specific directories
exclude =
    .git,
    __pycache__,
    build,
    dist,
    .tox,
    .venv,
    .env,
    venv,
    env,
    migrations

; Set the maximum complexity for cyclomatic complexity checks
; This is a measure of how complex the code is, with higher values indicating more complexity.
max-complexity = 10
